<h1>Change Password</h1>
<%= form_with url: change_password_user_path(@user), method: :put do |form| %>
  <div>
    <%= form.label :old_password %>
    <%= form.password_field :old_password %>
  </div>
  <div>
    <%= form.label :new_password %>
    <%= form.password_field :new_password %>
  </div>
  <div>
    <%= form.submit 'Change Password' %>
  </div>
<% end %>
